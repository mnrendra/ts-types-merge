{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", {
      "ignoreUrls": true,
      "ignoreTemplateLiterals": true,
      "ignoreStrings": true
    }],
    "@typescript-eslint/strict-boolean-expressions": "off",
    "@typescript-eslint/ban-types": "off"
  }
}
